<LinearLayout
    android:id="@+id/empty"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dip"
    android:background="@color/primary_background"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:id="@+id/empty_picture"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_alfresco_logo_light" />

    <TextView
        android:id="@+id/empty_text"
        style="@style/ActivitiTheme.Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_8"
        android:gravity="center"
        android:maxLines="10"
        android:textColor="@color/secondary_text"
        tools:text="@string/error_general" />

    <TextView
        android:id="@+id/empty_text_description"
        style="@style/ActivitiTheme.Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_8"
        android:gravity="center"
        android:maxLines="10"
        android:textColor="@color/secondary_text"
        tools:text="@string/error_general" />

    <Button
        android:id="@+id/empty_action"
        style="@style/ActivitiTheme.Button.BorderLess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        tools:text="@string/retry" />

</LinearLayout>