<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/ActivitiTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d_16"
            android:text="@string/settings_accounts_title"
            android:textColor="@color/secondary_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical"/>

        <!-- ADD ACCOUNT PROGRAMMATICALLY -->
        <LinearLayout
            android:id="@+id/settings_accounts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="?android:attr/dividerVertical"/>


        <!-- FEEDBACK Content !-->
        <TextView
            android:id="@+id/settings_feedback_title"
            style="@style/ActivitiTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_background"
            android:padding="@dimen/d_16"
            android:text="@string/settings.feedback"
            android:textColor="@color/secondary_text" />

        <View
            android:id="@+id/settings_feedback_underline"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical" />

        <LinearLayout
            android:id="@+id/settings_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

            <!-- Send Feedback !-->
            <LinearLayout
                android:id="@+id/settings_feedback_email_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_feedback_email"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_marginRight="@dimen/d_8"
                android:background="?android:attr/dividerVertical" />

            <!-- Diagnostic !-->
            <LinearLayout
                android:id="@+id/settings_diagnostic_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_diagnostic"
                    layout="@layout/row_two_lines_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="?android:attr/dividerVertical" />

        <TextView
            style="@style/ActivitiTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_background"
            android:padding="@dimen/d_16"
            android:text="@string/settings_about_title"
            android:textColor="@color/secondary_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_google_play_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_google_play"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_marginRight="@dimen/d_8"
                android:background="?android:attr/dividerVertical"/>

            <LinearLayout
                android:id="@+id/settings_version_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_version"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_marginRight="@dimen/d_8"
                android:background="?android:attr/dividerVertical"/>

            <LinearLayout
                android:id="@+id/settings_about_clu_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_about_clu"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="@dimen/d_8"
                android:layout_marginRight="@dimen/d_8"
                android:background="?android:attr/dividerVertical"/>

            <LinearLayout
                android:id="@+id/settings_about_thirdparty_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_about_thirdparty"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="@dimen/d_16"
            android:background="?android:attr/dividerVertical" />

    </LinearLayout>
</ScrollView>