<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        style="@style/ActivitiTheme.Container.Relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/one_list_minHeight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon"
            android:layout_width="@dimen/list_icon_size"
            android:layout_height="@dimen/list_icon_size"
            android:textColor="@color/divider"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginRight="@dimen/d_16"
            tools:text="T"
            />

        <TextView
            android:id="@+id/toptext"
            style="@style/ActivitiTheme.Text.List.Primary"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="Application Title"/>

        <TextView
            android:id="@+id/toptext_right"
            style="@style/ActivitiTheme.Text.List.Caption"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/accent"
            tools:text="XX"/>
    </LinearLayout>

</LinearLayout>
