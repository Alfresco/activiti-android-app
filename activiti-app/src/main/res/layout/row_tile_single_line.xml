<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:minHeight="@dimen/one_list_minHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/secondary_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_action_inbox"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dip"
        android:layout_gravity="center"
        android:background="@color/divider_translucent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/textview_container"
            style="@style/ActivitiTheme.Container.Relative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/toptext"
                style="@style/ActivitiTheme.Text.List.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Text for Preview"/>

            <TextView
                android:id="@+id/bottomtext"
                style="@style/ActivitiTheme.Text.List.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Plain Text for preview"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_more_grey"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>