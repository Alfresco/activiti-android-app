<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/d_4"
    android:paddingTop="@dimen/d_4">

    <TextView
        android:id="@+id/header_title"
        style="@style/ActivitiTheme.Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_16"
        android:text="@string/settings_accounts_title"
        android:textColor="@color/secondary_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="@dimen/d_8"
        android:layout_marginRight="@dimen/d_8"
        android:background="?android:attr/dividerVertical" />

</LinearLayout>