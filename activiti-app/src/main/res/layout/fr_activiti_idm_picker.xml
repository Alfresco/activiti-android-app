<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_background"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="275dip"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/d_8"
        android:paddingLeft="@dimen/d_16"
        android:paddingRight="@dimen/d_16"
        android:orientation="horizontal">

        <com.rengwuxian.materialedittext.MaterialEditText xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/search_query"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/accent_cursor"
            android:hint="@string/involve_people_use_email"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/accent"
            android:paddingBottom="@dimen/d_8" />

        <ImageButton
            android:id="@+id/search_contact"
            style="@style/ActivitiTheme.Button.BorderLess.Padding16"
            android:layout_width="@dimen/list_icon_size"
            android:layout_height="match_parent"
            android:src="@drawable/ic_quick_contacts_mail_grey" />

    </LinearLayout>

    <TextView
        android:paddingTop="@dimen/d_8"
        android:paddingLeft="@dimen/d_16"
        android:paddingRight="@dimen/d_16"
        android:paddingBottom="@dimen/d_16"
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/involve_people_email_help"
        style="@style/ActivitiTheme.Text.Secondary"
        android:maxLines="10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="?android:attr/dividerVertical" />

</LinearLayout>