<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/one_list_minHeight"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/search_back"
        style="@style/ActivitiTheme.Button.BorderLess.Padding16"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_arrow_back_white"
        />

    <EditText
        android:id="@+id/search_query"
        style="@style/ActivitiTheme.Text.List.Primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:ems="10"
        android:hint="@string/involve_people_search_placeholder"
        android:inputType="text"
        android:paddingLeft="@dimen/d_16"
        android:imeOptions="actionSearch"
        android:textColorHint="@color/secondary_background_translucent"/>

    <ImageButton
        android:id="@+id/search_start"
        style="@style/ActivitiTheme.Button.BorderLess.Padding16"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="match_parent"
        android:src="@drawable/ic_send_white" />

    <ImageButton
        android:id="@+id/search_microphone"
        style="@style/ActivitiTheme.Button.BorderLess.Padding16"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="match_parent"
        android:src="@drawable/ic_mic_white"/>
</LinearLayout>