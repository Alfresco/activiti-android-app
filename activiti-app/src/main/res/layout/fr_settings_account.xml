<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/ActivitiTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_background"
            android:padding="@dimen/d_16"
            android:text="@string/settings_userinfo"
            android:textColor="@color/secondary_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical"/>

        <!-- ######################################################################### -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_account_name_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_account_name"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ######################################################################### -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settings_account_info_container"
                style="@style/ActivitiTheme.Button.BorderLess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/settings_account_info"
                    layout="@layout/row_two_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="?android:attr/dividerVertical"/>


        <TextView
            android:id="@+id/settings_intregration_alfresco_parent_title"
            style="@style/ActivitiTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_background"
            android:padding="@dimen/d_16"
            android:text="@string/settings_account_integration"
            android:textColor="@color/secondary_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="?android:attr/dividerVertical"/>

        <LinearLayout
            android:id="@+id/settings_intregration_alfresco_parent_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_background"
            android:orientation="vertical">

            <!-- ADD INTEGRATION PROGRAMMATICALLY -->
            <LinearLayout
                android:id="@+id/settings_intregration_alfresco_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_background"
                android:orientation="vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="?android:attr/dividerVertical"/>

    </LinearLayout>
</ScrollView>