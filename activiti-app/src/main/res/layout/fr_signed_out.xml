<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:orientation="vertical"
    android:theme="@style/Theme.Alfresco">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/ActivitiTheme.Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="999"
        android:padding="@dimen/d_16"
        android:text="@string/general_login_signed_out_message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_background"
        android:measureWithLargestChild="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sign_in_button"
            style="@style/ActivitiTheme.Button.BorderLess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_sign_in_short" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/ActivitiTheme.Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="999"
        android:padding="@dimen/d_16"
        android:text="@string/general_login_signed_out_alt_message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical" />

    <LinearLayout
        android:id="@+id/accounts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_background"
        android:orientation="vertical" />

</LinearLayout>