<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/drawer_account"
        style="@style/ActivitiTheme.Button.BorderLess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="horizontal"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/drawer_account_icon"
            android:layout_width="@dimen/rounded_icon_size"
            android:layout_height="@dimen/rounded_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_inbox"
            app:riv_border_color="@color/secondary_background"
            app:riv_tile_mode="clamp"
            app:riv_border_width="1dip"
            app:riv_corner_radius="100dip"
            app:riv_mutate_background="false"
            app:riv_oval="true"
            />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawer_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Jean Marie Pascal"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/drawer_account_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:text="jeanmarie.pascal@alfresco.com"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/account_switcher"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/ic_expand_more_white"/>

    </LinearLayout>
</LinearLayout>